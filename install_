#!/bin/bash

# Clone Betty repository
git clone https://github.com/holbertonschool/Betty.git

# Move to the Betty directory
cd Betty

# Install Betty
sudo ./install.sh

# Move back to the original directory
cd ..

# Create Betty's configuration file in your home directory
echo "BETTY_STYLE = \"linux\"" > ~/.betty

# Display a message indicating successful installation
echo "Betty configuration installed successfully. Make sure to restart your shell."

# Clean up by removing the Betty directory
rm -rf Betty

